    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/api",
            "env": {
                "GO_ENV": "development",
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_NAME": "library",
                "DB_USER": "library",
                "DB_PASSWORD": "library123",
                "REDIS_HOST": "localhost",
                "REDIS_PORT": "6379"
            },
            "console": "integratedTerminal",
            "trace": "verbose"
        },
        {
            "name": "Debug Worker",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/worker",
            "env": {
                "GO_ENV": "development",
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_NAME": "library",
                "DB_USER": "library",
                "DB_PASSWORD": "library123",
                "REDIS_HOST": "localhost",
                "REDIS_PORT": "6379"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Migration",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/migrate",
            "args": ["up"],
            "env": {
                "GO_ENV": "development",
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_NAME": "library",
                "DB_USER": "library",
                "DB_PASSWORD": "library123"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Current Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "env": {
                "GO_ENV": "test"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Current File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}